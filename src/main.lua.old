------------------------------ Examples ------------------------------
local function setExample1()
	local x, y = 200, 200
	local xoff = 1.2
	local yoff = 5
	createPoint(x, y, true)
	for i = 1, 100 do
		createPoint(x + i^ xoff, y + i * yoff, nil, true)
	end
end

local function setExample2()
	local x, y = SCREEN_WIDTH / 2, 200
	local yoff = POINT_SIZE * 2 + 1
	for i = 1, 50 do
		print(i)
		createPoint(x, y + i * yoff, nil, true)
	end
	print("Points: ", #world.points)
end

local PLAYERS_SPAWNED = false
local PLAYER1
local PLAYER2
local function spawnPlayers()
	if PLAYERS_SPAWNED then
		world:removeEntity(PLAYER1)
		PLAYER1 = nil
		world:removeEntity(PLAYER2)
		PLAYER2 = nil
	else
		local pos1 = Vector(100, GLOBAL.SCREEN_HEIGHT / 2)
		PLAYER1 = Player(world, pos1, GLOBAL.KEYBINDS_P1)
		
		while not world:addEntity(PLAYER1) do
			PLAYER1.pos.x = PLAYER1.pos.x - 5
		end

		local pos2 = Vector(GLOBAL.SCREEN_WIDTH - 100, GLOBAL.SCREEN_HEIGHT / 2)
		PLAYER2 = Player(world, pos2, GLOBAL.KEYBINDS_P2)
		while not world:addEntity(PLAYER2) do
			PLAYER2.pos.x = PLAYER2.pos.x + 5
		end
	end
	
	PLAYERS_SPAWNED = not PLAYERS_SPAWNED 
end

