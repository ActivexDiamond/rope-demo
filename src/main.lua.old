		setExample2()
	end
end

function love.wheelmoved(x,y)
	GLOBAL.TAUTNESS = math.max(0, GLOBAL.TAUTNESS + y)
end

function love.mousepressed(x, y, button, isTouch)
	if button == 1 then
		createPoint(x, y)
	elseif button == 2 then
		world:addBlock(x, y)
	end
end

function createPoint(x, y, locked, silent)
	if locked == nil then
		locked = love.keyboard.isDown('lshift')
	end
	
	local point = Point(world, x, y, locked)
	local succ = world:addPoint(point)

	if not succ then
		print("Failed to place point.")
		if not silent then actionFailedSfx:play() end
		return
	end
	if not lastPoint then
		lastPoint = point
		firstPoint = point
		return
	end
	
	local stick = Stick(world, point, lastPoint)
	lastPoint = point
	local succ = world:addStick(stick)
	if not succ then
		print("Failed to place stick.")
	end
end